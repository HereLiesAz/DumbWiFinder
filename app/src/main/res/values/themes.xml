<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Geministrator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/on_primary_text</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/highlight_green</item>
        <item name="colorOnSecondary">@color/on_secondary_text</item>

        <!-- Background and surface colors. -->
        <item name="android:colorBackground">@color/dark_grey_background</item>
        <item name="colorSurface">@color/dark_grey_surface</item>
        <item name="colorOnBackground">@color/on_primary_text</item>
        <item name="colorOnSurface">@color/on_primary_text</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_grey_background</item>

        <!-- Typography. -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.M3.DisplayLarge</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.M3.HeadlineLarge</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.M3.TitleLarge</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.M3.BodyLarge</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.M3.LabelLarge</item>
    </style>
</resources>
